<%- include("../partials/header") %>

<div class="container" style="margin-top: 100px">
	
		
		<h1 style="text-align: center">
			Edit Comment
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="comment[text]" value='<%=comment.text%>'>
				</div>
				
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" style="border: 1px solid black">
					Submit!
					</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back!</a>
		</div>
		

</div>

<%- include("../partials/footer") %>