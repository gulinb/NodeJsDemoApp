<%- include("../partials/header") %>

<div class="container" style="margin-top: 100px">
	<h1 style="text-align: center">
		Add New Comment to <%= campground.name %>
	</h1>
	<div style="width: 30%; margin: 30px auto;">
		<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="text" name="comment[text]">
			</div>	
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" style="border: 1px solid black">
				Submit!
				</button>
			</div>
		</form>
		<a href="/campgrounds/<%= campground._id %>">Go Back!</a>
	</div>
</div>

<%- include("../partials/footer") %>