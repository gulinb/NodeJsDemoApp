<%- include("../partials/header") %>

<div class="container" style="margin-top: 100px">
	
		
		<h1 style="text-align: center">
			Create a new Campground
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="name" name="camp">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="price" name="price" min='0.01' step='0.01'>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="image url" name="url">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" style="border: 1px solid black">
					Submit!
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a>
		</div>
		

</div>

<%- include("../partials/footer") %>