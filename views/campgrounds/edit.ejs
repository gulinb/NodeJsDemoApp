<%- include("../partials/header") %>

<div class="container" style="margin-top: 100px">
	
		
		<h1 style="text-align: center">
			Edit <%=campground.name%>
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="campground[name]" value='<%=campground.name%>'>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[price]" value='<%=campground.price%>' min='0.01' step='0.01'>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[image]" value='<%=campground.image%>'>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[description]" value='<%=campground.description%>'>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" style="border: 1px solid black">
					Submit!
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a>
		</div>
		

</div>

<%- include("../partials/footer") %>